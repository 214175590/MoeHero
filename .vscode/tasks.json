{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "0.1.0",
    "command": "\"${workspaceRoot}/tools/w3x2lni/bin/w2l-worker.exe\"",
    "isShellCommand": true,
    "showOutput": "always",
    "echoCommand": false,
    "suppressTaskName": true,
    "tasks": [
        {
            "taskName": "运行",
            "args": [
                ".\\tools\\运行.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "taskName": "配置",
            "args": [
                ".\\tools\\配置.lua",
                "${workspaceRoot}"
            ]
        },
        {
            "taskName": "语法检查",
            "args": [
                ".\\tools\\语法检查.lua",
                "${workspaceRoot}"
            ],
            "showOutput": "silent",
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                }
            },
            "isBuildCommand": true
        },
        {
            "taskName": "Obj",
            "args": [
                ".\\tools\\打包地图.lua",
                "${workspaceRoot}",
                "obj"
            ]
        },
        {
            "taskName": "Lni",
            "args": [
                ".\\tools\\打包地图.lua",
                "${workspaceRoot}",
                "lni"
            ]
        },
        {
            "taskName": "Slk",
            "args": [
                ".\\tools\\打包地图.lua",
                "${workspaceRoot}",
                "slk"
            ]
        },
        {
            "taskName": "🔍",
            "args": [
                ".\\tools\\语法检查.lua",
                "${workspaceRoot}",
                "--watch"
            ],
            "showOutput": "silent",
            "isBackground": true,
            "problemMatcher": {
                "owner": "lua",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}"
                ],
                "pattern": {
                    "regexp": "^(.*):(\\d+):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "\\[Watch\\] File change detected\\.",
                    "endsPattern": "\\[Watch\\] Complete\\."
                }
            }
        }
    ]
}